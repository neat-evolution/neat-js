{
  "name": "neat-evolution",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/neat-evolution/neat-js.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "change": "beachball change --no-commit && git commit -a -m \"chore: add change files\"",
    "check": "yarn check:beachball && yarn check:manypkg",
    "check:beachball": "beachball check",
    "check:manypkg": "manypkg check",
    "clean": "turbo run clean",
    "clean:hard": "turbo run clean --force && find . -name node_modules -type d -prune -exec rm -rf {} +",
    "claude": "yarn dlx @anthropic-ai/claude-code",
    "coverage": "turbo run coverage",
    "coverage:ci": "turbo run coverage --concurrency=2",
    "demo": "yarn build && yarn workspace @neat-evolution/demo start",
    "format": "turbo run format",
    "gemini": "yarn dlx @google/gemini-cli",
    "lint": "turbo run lint",
    "prepare": "husky",
    "release": "beachball publish",
    "test": "turbo run test",
    "test:ci": "turbo run test --concurrency=2"
  },
  "packageManager": "yarn@4.12.0",
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.4",
    "yarn": "4.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/config-workspace-scopes": "^20.0.0",
    "@manypkg/cli": "^0.25.1",
    "beachball": "^2.58.0",
    "husky": "^9.1.7",
    "turbo": "^2.6.1"
  }
}
